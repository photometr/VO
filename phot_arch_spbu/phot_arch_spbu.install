/**
 * Implements hook_install().
 *
 * In Drupal 7, there is no need to install schema using this hook, the schema
 * is already installed before this hook is called.
 *
 * We will create a default entry in the database.
 *
 * @see hook_install()
 * @ingroup phot_arch_spbu
 */
function phot_arch_spbu_install() {
  // Outside of the .install file we would use drupal_write_record() to
  // populate the database, but it cannot be used here, so we'll use
  // db_insert().

  // Add a default entry.
  $fields = array(
    'name'    => 'BL Lacertae',
  );
  db_insert('phot_arch_spbu_objects')
    ->fields($fields)
    ->execute();

  // Add another entry.
  $fields = array(
    'name'    => 'OJ 287',
  );
  db_insert('phot_arch_spbu_objects')
    ->fields($fields)
    ->execute();
  $fields = array(
    'name'    => 'S5 0716+71',
  );
  db_insert('phot_arch_spbu_objects')
    ->fields($fields)
    ->execute();
  $fields = array(
    'name'    => '3C 454.3',
  );
  db_insert('phot_arch_spbu_objects')
    ->fields($fields)
    ->execute();
  $fields = array(
    'name'    => '3C 273',
  );
  db_insert('phot_arch_spbu_objects')
    ->fields($fields)
    ->execute();

  // Fill filters
  $fields = array(
    'id'    => '1',
    'band' => 'B',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
  $fields = array(
    'id'    => '2',
    'band' => 'V',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
  $fields = array(
    'id'    => '3',
    'band' => 'Rc',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
  $fields = array(
    'id'    => '4',
    'band' => 'Ic',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
  $fields = array(
    'id'    => '5',
    'band' => 'J',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
  $fields = array(
    'id'    => '6',
    'band' => 'H',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
  $fields = array(
    'id'    => '7',
    'band' => 'K',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
  $fields = array(
    'id'    => '8',//FIXME change if statement in phot_arch_spbu_entry_insert(..)
//of phot_arch_spbu.module if you change this value
    'band' => 'Pol',
  );
  db_insert('phot_arch_spbu_bands')
    ->fields($fields)
    ->execute();
}

/**
 * Implements hook_uninstall().
 *
 * As in hook_install, there is no need to uninstall schema, Drupal will do it
 * for us.
 *
 * @see hook_uninstall()
 * @ingroup phot_arch_spbu
 */
function phot_arch_spbu_uninstall() {
  // nothing.
}


